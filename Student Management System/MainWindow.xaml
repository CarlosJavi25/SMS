<Window x:Class="Student_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Management_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6" HorizontalAlignment="Center" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="647*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Margin="150,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.556"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Margin="152,98,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.475,-0.61"/>
        <TextBox x:Name="txtMajor" HorizontalAlignment="Left" Margin="152,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Margin="152,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.692,0.058"/>
        <Label Content="Second Name:" HorizontalAlignment="Left" Margin="62,59,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="70,90,0,0" VerticalAlignment="Top"/>
        <Label Content="Age:" HorizontalAlignment="Left" Margin="78,121,0,0" VerticalAlignment="Top"/>
        <Label Content="Major:" HorizontalAlignment="Left" Margin="78,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.344,-0.063"/>
        <Button x:Name="btnAddStudent" Content="Add" HorizontalAlignment="Left" Margin="62,0,0,0" VerticalAlignment="Center" Width="60" Click="btnAddStudent_Click" />
        <Button x:Name="btnUpdateStudent" Content="Update" HorizontalAlignment="Left" Margin="141,0,0,0" VerticalAlignment="Center" Width="60" Click="btnUpdateStudent_Click" IsEnabled="False"/>
        <Button x:Name="btnDeleteStudent" Content="Delete" HorizontalAlignment="Left" Margin="223,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.855,1.472" Width="60" Click="btnDeleteStudent_Click" IsEnabled="False"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="306,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="-0.486,0.436" Width="60" Click="btnClear_Click"/>
        <DataGrid x:Name="dgStudents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,253,0,10" CanUserAddRows="False"  SelectionChanged="dgStudents_SelectionChanged" Grid.ColumnSpan="2" />
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="69,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSecondName" HorizontalAlignment="Left" Margin="151,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.556"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
